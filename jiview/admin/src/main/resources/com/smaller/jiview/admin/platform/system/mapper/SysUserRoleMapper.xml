<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smaller.jiview.admin.platform.system.mapper.SysUserRoleMapper">
  <resultMap id="BaseResultMap" type="com.smaller.jiview.admin.platform.system.model.SysUserRole">
    <!--
      WARNING - @mbggenerated
    -->
    <result column="authorize_id" jdbcType="BIGINT" property="authorizeId" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="role_id" jdbcType="BIGINT" property="roleId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
  </resultMap>
  <select id="listUserRole" resultType="com.smaller.jiview.admin.pojo.model.ext.SysUserRoleExt">
    SELECT
    sur.authorize_id,
    sur.user_id,
    sur.role_id,
    sr.role_name AS roleName
    FROM sys_user_role sur
    LEFT JOIN sys_role sr
    ON sur.role_id = sr.role_id
    WHERE 1=1
    AND sur.user_id = #{userId}
  </select>
</mapper>